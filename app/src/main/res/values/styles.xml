<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!--Enable window content transition -->
        <item name="android:windowContentTransitions">true</item>
    </style>
    <!--Toolbar theme .-->
    <style name="toolbarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>
    <!-- Toolbar popup theme .-->
    <style name="popupTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!--Styles for text view in splash screen -->
    <style name="StaticText">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:text"></item>
    </style>
    <!--Question style-->
    <style name="questionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
